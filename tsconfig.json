{
    "compilerOptions": {
      "outDir": "./dist-esm",
      "module": "NodeNext",
      "target": "ES6",
      "lib": ["es5", "es6", "es7", "es2017", "dom"],
      "sourceMap": true,
      "allowJs": false,
      "rootDirs": ["src"],
      "baseUrl": "./",
      "declarationDir": "./typings",
      "declarationMap": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "./index.js", "./dist", "./dist-esm", "src/**/*.test.ts", "./test"]
  }
  